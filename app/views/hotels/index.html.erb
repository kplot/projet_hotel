<p id="notice"><%= notice %></p>

<h1>Liste de nos hôtels</h1>

<div style="text-align:right;">
  
  <%= search_form_for @q do |f| %>

  <%= f.label :rechercher_un_hôtel %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
  <% end %>
  
</div>


<table class='table table-bordered table-hover table_hotel'>
  <thead>
    <tr>
    <th>Name</th>  
    <th>Description</th>
    <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= link_to hotel.name, hotel %></td>
        <td><%= hotel.description %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin-bottom:8cm;">
  <%= link_to 'Ajouter un hôtel', new_hotel_path %>
</div>

