<%= form_tag reservation_charges_path do %>
 <%= render partial: 'shared/header' %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Résumé de votre reservation pour l'hôtel....</span><br>
      <span>Vos coordonnées....</span><br>
      <span>Type de chambre "<%= @room.name %>" </span><br>
      <span>Pour la période du <%= @reservation.arrived_at %> au <%= @reservation.leaved_at %></span><br>
      <span>Prix d'une nuitée <%= @room.price %>$</span><br>
      <span>Nombre de nuit <%= @reservation.nbnuit %></span><br>
      <span>Prix total de votre réservation <%= @reservation.totalprice %>$</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Paiement de votre réservation"
          data-amount="<%= @reservation.totalprice_cents %>"
          data-locale="auto"></script>
<% end %>